<div class="mythacri-scripts item-transfer">
  <p>{{localize "MYTHACRI.ItemTransfer.MessageContent" source=source.name item=item.name target=target.name}}</p>
  <div class="buttons">
    <button type="button" data-action="transfer">
      <i class="fa-solid fa-gift"></i>
      {{localize "MYTHACRI.ItemTransfer.Accept"}}
