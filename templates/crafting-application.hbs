<div class="content {{type}}">
  <h3 class="header">
    {{localize title}}
    <label class="checkbox">
      <input type="checkbox" id="available" {{checked availableOnly}}>
      {{localize "MYTHACRI.CRAFTING.ShowAvailable.hint"}}
    </label>
  </h3>
  <div class="sections">
    <section class="recipes">
      {{#each recipes}}
      {{> "modules/mythacri-scripts/templates/parts/crafting-recipe.hbs"}}
      {{/each}}
    </section>
    <section class="selected">
      {{#if recipe}}
      {{> "modules/mythacri-scripts/templates/parts/crafting-selected.hbs"}}
      {{/if}}
    </section>
  </div>
</div>
